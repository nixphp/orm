{
  "name": "nixphp/orm",
  "description": "NixPHP ORM Plugin.",
  "minimum-stability": "stable",
  "license": "MIT",
  "type": "nixphp-plugin",
  "authors": [
    {
      "name": "Flo Knapp",
      "email": "office@florianknapp.de"
    }
  ],
  "autoload": {
    "psr-4": {
      "NixPHP\\ORM\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "repositories": [
    {
      "type": "path",
      "url": "../nixphp-framework"
    },
    {
      "type": "path",
      "url": "../nixphp-database"
    }
  ],
  "require": {
    "php": ">=8.3",
    "ext-pdo": "*",
    "nixphp/framework": "dev-main",
    "nixphp/database": "dev-main"
  },
  "require-dev": {
    "phpunit/phpunit": "^12.1",
    "phpunit/php-code-coverage": "^12.1"
  },
  "scripts": {
    "test": "phpunit --colors=always"
  }
}
